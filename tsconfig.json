{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "module": "ES2022",
    "strict": true,
    "moduleResolution":"node",
    "baseUrl": "./",
    "types": ["@types/styled-components-react-native"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "paths": {
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@screens/*": [
        "./src/screens/*"
      ],
      "@storage/*": [
        "./src/storage/*"
      ],
      "@theme/*": [
        "./src/theme/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@db/*": [
        "./src/db/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ]
    }
  },
  "include": ["src", "@types/styled.d.ts", "**/*.ts", "**/*.tsx"]
}
